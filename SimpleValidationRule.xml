<constraint-mappings>
    <default-package>subpack</default-package>
    <bean class="GenericEntity" ignore-annotations="false"    >
         <field name="COLUMN1"  > 
            <constraint annotation="javax.validation.constraints.Min">
                 <element name="value">0</element>
            </constraint>
        </field>
         <field name="COLUMN2">  
            <constraint annotation="javax.validation.constraints.Pattern">
                 <element name="regexp">[a-z]*</element>
            </constraint>
        </field>
        <field name="COLUMN3">
            <constraint annotation="javax.validation.constraints.NotNull">
            </constraint>
        </field>
        <field name="COLUMN4">
            <constraint annotation="javax.validation.constraints.NotNull">
            </constraint>
        </field>
    </bean>
    <bean class="superpack.GenericEntity" ignore-annotations="false"    >
         <field name="COLUMN1"  > 
            <constraint annotation="javax.validation.constraints.Min">
                 <element name="value">0</element>
            </constraint>
        </field>
         <field name="COLUMN2">  
            <constraint annotation="javax.validation.constraints.Pattern">
                 <element name="regexp">[a-z]*</element>
            </constraint>
        </field>
        <field name="COLUMN3">
            <constraint annotation="javax.validation.constraints.NotNull">
            </constraint>
        </field>
        <field name="COLUMN4">
            <constraint annotation="javax.validation.constraints.NotNull">
            </constraint>
        </field>
    </bean>    
</constraint-mappings>
